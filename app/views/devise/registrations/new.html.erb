<div class="page">

  <div class="container registration" data-controller="onboarding" data-action="load->onboarding#topScroll"  data-action="wheel->onboarding#preventScroll">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
      <%= f.error_notification %>

      <div class="d-flex">
        <div class="col-8 offset-2 form-div" id="quizz-status">
          <%= f.collection_radio_buttons :status, [["student", "Lycéen ou étudiant, je cherche ma voie 🧑‍🎓"], ["mentor", "Professionnel, j'aimerais partager mon experience 💼"]], :first, :last, input_html: { class: 'path-btn' } %>
          <a href="#quizz-registration" class="scroll-button" data-controller="scroll-to">Passe à la suite 👇</a>
        </div>
      </div>

      <%# Standard Registration %>
      <div class="student-form">

        <div class="d-flex form-inputs">
          <div class="col-8 offset-2 form-div" id="quizz-registration">
            <h5>Avant toutes choses, on a besoin de quelques renseignements sur toi !</h5>
            <%= f.input :first_name,
                        :label => false,
                        required: true,
                        autofocus: true,
                        placeholder: "Ton prénom",
                        input_html: { "data-onboarding-target" => "firstNameInput" } %>
            <%= f.input :last_name,
                        :label => false,
                        placeholder: "Ton nom de famille",
                        required: true,
                        autofocus: true %>
            <%= f.input :email,
                        :label => false,
                        placeholder: "Ton mail",
                        required: true,
                        autofocus: true %>
            <%= f.input :age,
                        :label => false,
                        placeholder: "17 ans",
                        required: true,
                        autofocus: true,
                        input_html: { min: 0 } %>
            <%= f.input :password,
                        :label => false,
                        required: true,
                        placeholder: "Ton meilleur mot de passe",
                        hint: ("#{@minimum_password_length} caractères au minimum 😉" if @minimum_password_length) %>
            <%= f.input :password_confirmation,
                        :label => false,
                        placeholder: "Tu peux nous le reconfirmer ici ?",
                        required: true %>
            <div class="form-actions">
              <%= f.button :submit, "Go 🚀" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
