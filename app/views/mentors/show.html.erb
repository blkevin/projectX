          </div>
      </div>
    <%end%>
  </div>

  <div class="right-side-chat conversation mx-5 my-5 position-relative" data-controller="conversation-subscription" data-conversation-subscription-conversation-id-value="<%= @conversation.id %>">
    <button type="button" class="btn btn-book" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Propose un crÃ©neau
    </button>
    <div class="top-message-name-show">
      <p class="text-center py-1"><%= @mentor.first_name %> <%= @mentor.last_name %> - ðŸŸ¢ en ligne</p>
    </div>
    <div class="messages" data-conversation-subscription-target="messages">
        <% @conversation.messages.each do |message| %>
          <% if message.user %>
            <%= render "messages/message", message: message %>
          <% else %>
            <%= render "messages/schedule", message: message %>
          <% end %>
        <% end %>
    </div>

    <%= simple_form_for [@conversation, @message],
      html: { data: { action: "turbo:submit-end->conversation-subscription#resetForm" }, class: "d-flex"} do |f| %>
      <%= f.input :content, as: :string,
        label: false,
        placeholder: "Message",
        wrapper_html: {class: "flex-grow-1"}
      %>
      <%= f.submit "Envoyer", class: "btn-chat mb-3" %>
    <% end %>
  </div>

</div>



