<div class="container">
  <div class="d-flex flex-wrap justify-content-evenly">
    <% @mentors.each do |mentor| %>
      <div class="card-mentor-vertical">
        <%= link_to mentor_path(mentor) do %>
          <% if mentor.photo.attached? %>
            <%= cl_image_tag mentor.photo.key, crop: :fill, class: 'card-mentor-vertical-avatar' %>
          <% else %>
            <%= image_tag 'https://img.freepik.com/photos-gratuite/outils-sport_53876-138077.jpg?w=2000', class: 'card-mentor-vertical-avatar' %>
          <% end%>
          <div class="">
            <h4> <%= mentor.first_name %> <%= mentor.last_name %></h4>
            <ul class="list-unstyled">
              <li class="card-school"> <%= mentor.educations.last.institution.name %></li>
              <li class="card-age"> <%= mentor.age %> ans</li>
              <li class="card-position"> <%= mentor.experiences.last.position.capitalize %></li>
              <li class="card-sector-industry"> <%= mentor.experiences.last.sector.capitalize %> - <%= mentor.experiences.last.industry.capitalize %></li>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
