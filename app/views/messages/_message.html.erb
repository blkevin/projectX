<% sender = message.user == current_user %>

<!-- the message will display on the right side of the chat
     if the `sender` class is present -->
<div class="message">
  <div class="message-infos">
    <p><span class="user-name"><%= message.user.first_name %></span> at <%= message.created_at.strftime("%H:%M") %></p>
  </div>
  <div class="message-content">
    <%= cl_image_tag message.user.photo.key, crop: :fill, class: 'card-mentor-vertical-avatar', alt: "#{message.user.first_name}'s avatar", class: 'message-avatar' %>
    <p class="message-inner-content"><%= message.content %></p>
  </div>
</div>
